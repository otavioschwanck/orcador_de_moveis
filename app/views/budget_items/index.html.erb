<%- model_class = BudgetItem -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:item_id) %></th>
      <th><%= model_class.human_attribute_name(:qtd) %></th>
      <th><%= model_class.human_attribute_name(:multiplicable) %></th>
      <th><%= model_class.human_attribute_name(:mobile_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @budget_items.each do |budget_item| %>
      <tr>
        <td><%= link_to budget_item.id, budget_item_path(budget_item) %></td>
        <td><%= budget_item.item_id %></td>
        <td><%= budget_item.qtd %></td>
        <td><%= budget_item.multiplicable %></td>
        <td><%= budget_item.mobile_id %></td>
        <td><%=l budget_item.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_budget_item_path(budget_item), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      budget_item_path(budget_item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_budget_item_path,
            :class => 'btn btn-primary' %>

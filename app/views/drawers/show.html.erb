<%- model_class = Drawer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @drawer.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:width) %>:</strong></dt>
  <dd><%= @drawer.width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:height) %>:</strong></dt>
  <dd><%= @drawer.height %></dd>
  <dt><strong><%= model_class.human_attribute_name(:front_plate) %>:</strong></dt>
  <dd><%= @drawer.front_plate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:internal) %>:</strong></dt>
  <dd><%= @drawer.internal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:slide) %>:</strong></dt>
  <dd><%= @drawer.slide %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qtd) %>:</strong></dt>
  <dd><%= @drawer.qtd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_id) %>:</strong></dt>
  <dd><%= @drawer.mobile_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              drawers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_drawer_path(@drawer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              drawer_path(@drawer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

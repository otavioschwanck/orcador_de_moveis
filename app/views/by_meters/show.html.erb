<%- model_class = ByMeter -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:width) %>:</strong></dt>
  <dd><%= @by_meter.width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:height) %>:</strong></dt>
  <dd><%= @by_meter.height %></dd>
  <dt><strong><%= model_class.human_attribute_name(:meter_price) %>:</strong></dt>
  <dd><%= @by_meter.meter_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qtd) %>:</strong></dt>
  <dd><%= @by_meter.qtd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_id) %>:</strong></dt>
  <dd><%= @by_meter.mobile_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              by_meters_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_by_meter_path(@by_meter), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              by_meter_path(@by_meter),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= simple_form_for @client, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@client[:name]) %>
  <%= f.input :phone %>
  <%= error_span(@client[:phone]) %>
  <%= f.input :cell_phone %>
  <%= error_span(@client[:cell_phone]) %>
  <%= f.input :email %>
  <%= error_span(@client[:email]) %>
  <%= f.input :description, as: :text %>
  <%= error_span(@client[:description]) %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-default' %>
<% end %>
